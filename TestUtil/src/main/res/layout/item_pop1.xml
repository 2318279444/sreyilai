<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        android:layout_marginVertical="50dp"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="20dp"
        app:cardCornerRadius="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/title"
                android:textSize="16dp"
                android:layout_marginLeft="15dp"
                android:layout_marginVertical="15dp"
                android:textColor="#000"
                android:text="标题"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/content"
                android:gravity="center"
                android:layout_below="@+id/title"
                android:textColor="#333"
                android:textSize="14dp"
                android:text="ikuhjaskjdhaskjdhaksjhdjkasdhkjashdkjasd
                lkasjdkasjdlkasjdlasdjaslkdjalsdjlkasdjlasjdlkasjdlaskd
                ahgdkjhaskdhaskjdhaskjdhjkasdhkjashdkjashdkjashdkjashdas
                hkjasdhkajsdhkjasdhkjashdkasjd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:layout_marginTop="20dp"
                android:layout_below="@+id/content"
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="#616161" />

            <LinearLayout
                android:layout_below="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="50dp">


                <TextView
                    android:id="@+id/btn_cancle"
                    android:gravity="center"
                    android:text="取消"
                    android:textColor="#333"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>

                <View
                    android:background="#616161"
                    android:layout_width="0.3dp"
                    android:layout_height="match_parent"/>

                <TextView
                    android:id="@+id/btn_getvip"
                    android:textColor="#1499FF"
                    android:gravity="center"
                    android:text="确认"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>